{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "title": "Nationalities of Astronauts",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jwai0004/FIT3179Assignment2/main/data/world.topojson",
        "format": {"type": "topojson", "feature": "world.geo"}
      },
      "mark": {"type": "geoshape", "fill": "#f1eef6", "stroke": "darkslategrey"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jwai0004/FIT3179Assignment2/main/data/world.topojson",
        "format": {"type": "topojson", "feature": "world.geo"}
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/jwai0004/FIT3179Assignment2/main/data/astronautsCountryFreq.csv"
            },
            "key": "Country",
            "fields": ["CountryCount"]
          }
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "title": "Number of Astronauts",
          "field": "CountryCount",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1, 10, 200],
            "range": ["#f1eef6", "#bdc9e1", "#74a9cf", "#0570b0"]
          }
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "Country"},
          {"field": "CountryCount", "type": "quantitative", "title": "Number of Astronauts"}
        ]
      }
    }
  ]
}
