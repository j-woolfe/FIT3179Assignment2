{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Astronaut mission roles",
  "hconcat": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jwai0004/FIT3179Assignment2/main/data/astronauts.csv"
      },
      "width": 300,
      "height": 300,
      "mark": {"type": "bar"},
      "transform": [{"filter": "datum.year_of_selection <= 1980"}],
      "encoding": {
        "x": {"field": "occupation", "sort": "-y", "title": null},
        "y": {"field": "number", "aggregate": "count", "axis": null},
        "color": {"field": "occupation", "title": "Mission Role", "legend": {}}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jwai0004/FIT3179Assignment2/main/data/astronauts.csv"
      },
      "width": 300,
      "height": 300,
      "mark": {"type": "bar"},
      "transform": [
        {
          "filter": "datum.year_of_selection > 1980 && datum.year_of_selection <= 2000"
        }
      ],
      "encoding": {
        "x": {"field": "occupation", "sort": "-y", "title": null},
        "y": {"field": "number", "aggregate": "count", "axis": null},
        "color": {"field": "occupation", "title": "Mission Role", "legend": {}}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jwai0004/FIT3179Assignment2/main/data/astronauts.csv"
      },
      "width": 300,
      "height": 300,
      "mark": {"type": "bar"},
      "transform": [{"filter": "datum.year_of_selection > 2000"}],
      "encoding": {
        "x": {"field": "occupation", "sort": "-y", "title": null},
        "y": {"field": "number", "aggregate": "count", "title": "Mission Role", "axis": null},
        "color": {"field": "occupation", "title": "Mission Role", "legend": {}}
      }
    }
  ]
}
